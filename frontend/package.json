{
  "name": "sick-fits-frontend",
  "version": "1.0.0",
  "description": "Sick Fits! An example React, GraphQL, Next and Apollo",
  "main": "index.js",
  "scripts": {
    "dev": "next dev -p 7777",
    "build": "next build",
    "start": "next start",
    "test": "NODE_ENV=test jest --watch",
    "test-win": "SET NODE_ENV=test&& jest --watch",
    "heroku-postbuild": "next build"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/client": "^3.2.4",
    "@prisma/binding-argument-transform": "^0.3.1",
    "@prisma/client": "^2.12.0",
    "@stripe/react-stripe-js": "^1.1.2",
    "@stripe/stripe-js": "^1.11.0",
    "apollo-boost": "^0.4.9",
    "apollo-server-micro": "^2.19.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-plugin-styled-components": "^1.7.1",
    "bcryptjs": "^2.4.3",
    "crypto": "^1.0.1",
    "date-fns": "^2.0.0-alpha.7",
    "dotenv": "^8.2.0",
    "downshift": "^6.0.6",
    "graphql": "^15.4.0",
    "graphql-cli": "^4.1.0",
    "graphql-tag": "^2.11.0",
    "jsonwebtoken": "^8.5.1",
    "lodash.debounce": "^4.0.8",
    "next": "^10.0.2",
    "next-connect": "^0.9.1",
    "next-with-apollo": "^5.1.0",
    "nodemailer": "^6.4.16",
    "nprogress": "^0.2.0",
    "prop-types": "^15.6.2",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-transition-group": "^4.4.1",
    "stripe": "^8.125.0",
    "styled-components": "^5.2.1",
    "waait": "^1.0.2"
  },
  "devDependencies": {
    "@apollo/react-testing": "^4.0.0",
    "@babel/core": "^7.12.7",
    "@prisma/cli": "^2.12.1",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.2.2",
    "babel-jest": "^26.6.3",
    "babel-plugin-module-resolver": "^4.0.0",
    "casual": "^1.5.19",
    "graphql-tools": "^7.0.2",
    "jest": "^26.6.3",
    "jest-transform-graphql": "^2.1.0",
    "react-test-renderer": "^17.0.1"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js",
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ],
    "transform": {
      "\\.(gql|graphql)$": "jest-transform-graphql",
      ".*": "babel-jest",
      "^.+\\.js?$": "babel-jest"
    }
  },
  "//": "This is our babel config, I prefer this over a .babelrc file",
  "babel": {
    "env": {
      "development": {
        "presets": [
          "next/babel"
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      },
      "production": {
        "presets": [
          "next/babel"
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      },
      "test": {
        "presets": [
          [
            "next/babel",
            {
              "preset-env": {
                "modules": "commonjs"
              }
            }
          ]
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      }
    }
  }
}
